<div id="<%= dom_id post %>" class="bg-white p-6 rounded shadow-lg mb-6">
  <div class="max-w-md mx-auto">
    <img src="<%= post.image %>" alt="Post Image" class="w-full object-cover rounded-t shadow-lg">
  </div>

  <div class="p-6">
    <div class="sm:flex sm:items-start sm:justify-between">
      <div class="flex items-center mb-4 sm:mb-0">
        <div class="ml-4">
          <p class="text-xl font-medium text-gray-700"><%= post.title %></p>
          <p class="text-gray-600"><%= post.author_user %></p>
        </div>
      </div>

      <div class="text-gray-600 text-sm">
        <p><%= time_ago_in_words(post.created_at) %> ago</p>
        <p><strong><%= post.likes %></strong> likes</p>
      </div>
    </div>

    <div class="mt-6">
      <p class="text-gray-700"><%= post.description %></p>
    </div>
    
    <hr class="my-6">

    <% if action_name != "show" %>
      <div class="text-right">
        <%= link_to "Show this post", post, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        <%= link_to 'Edit this post', edit_post_path(post), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      </div>
    <% end %>
  </div>
</div>